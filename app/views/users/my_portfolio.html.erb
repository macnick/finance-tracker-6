<div class="ui centered grid">
  <div class="row">
    <h3>Search Stocks</h3>
  </div>
  <div class="row search-area">
    <div class="twelve wide column">
      <%= form_with url: search_stock_path, method: :get, local: false do |form| %>
        <div class="ui segment">
          <div class="ui large form">
            <div class="ui field search">
              <div class="ui action input">
                <%= form.text_field :stock, placeholder: "Stock ticker symbol", autofocus: true %> 
                <%= form.button type: "submit", class: "ui green icon button" do %>
                  <i class="large search icon"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div id="results">

  </div>


  <div class="row">
    <div class="twelve wide column">
      <% if !@my_portfolio.empty? %>
        <%= render "stocks/list"%>
      <% end %>
    </div>
  </div>
</div> 
