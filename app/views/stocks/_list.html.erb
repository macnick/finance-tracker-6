<table class="ui selectable green table">
  <thead>
    <tr><th>Ticker</th>
    <th>Company Name</th>
    <th>Price</th>
    <th>52 week low</th>
    <th>52 week high</th>
    <th>Actions</th>
  </tr></thead>
  <tbody>

      <% @my_portfolio.each do |stock| %>
        <tr>
          <td><%= stock.ticker %></td>
          <td><%= stock.name %></td>
          <td><%= stock.last_price %></td>
          <td>0</td>
          <td>0</td>
          <td><%= link_to 'Remove', user_stock_path(stock), method: :delete, data: {confirm: 'Are you sure?'}, class: 'ui yellow button'%></td>
        </tr>

      <% end %>
  </tbody>
</table>