<table class="ui selectable orange table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= link_to 'Unfollow', friendship_path(friend), method: :delete, data: {confirm: 'Are you sure?'}, class: 'ui yellow button' %> </td> 
        </tr>
      <% end %>
  </tbody>
</table>